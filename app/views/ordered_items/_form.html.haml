= form_for @ordered_item do |f|
  - if @ordered_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ordered_item.errors.count, "error")} prohibited this ordered_item from being saved:"
      %ul
        - @ordered_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
