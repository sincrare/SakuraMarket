%h1 Listing users

%table.table-bordered
  %thead
    %tr
      %th Email
      %th Name
      %th Zip
      %th Address
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td= user.zip
        %td= user.address
        %td= link_to 'Show', admin_user_path(user)
        %td= link_to 'Edit', edit_admin_user_path(user)
        %td= link_to 'Destroy', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are ou sure?' }
