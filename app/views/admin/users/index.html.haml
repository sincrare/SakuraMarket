%h1 ユーザー一覧

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th メールアドレス
      %th 名前
      %th 郵便番号
      %th 住所
      %th.col_buttons 操作

  %tbody
    - @users.order(:id).each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td= user.zip
        %td= user.address
        %td
          =link_to '詳細', admin_user_path(user), class: 'btn btn-info'
          = link_to '編集', edit_admin_user_path(user), class: 'btn btn-primary'
          = link_to '削除', admin_user_path(user), :method => :delete, :data => { :confirm => 'ユーザー情報を削除してよろしいですか？' }, class: 'btn btn-danger'
