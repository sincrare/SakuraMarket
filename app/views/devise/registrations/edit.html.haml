.row
  .col-md-5
    %h2 ユーザー情報の変更
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.input :email, input_html: { autofocus: true }, as: :email
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = f.input :name
      = f.input :zip
      = f.input :address
      = f.input :password, input_html: { autocomplete: 'off' }, as: :password
      = f.input :password_confirmation, input_html: { autocomplete: 'off' }, as: :password
      = f.input :current_password, input_html: { autocomplete: 'off' }, as: :password
      = f.button :submit, '更新する', class: 'btn btn-primary'
    %h3 ユーザーアカウントの削除
    %p
      #{button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除してよろしいですか？" }, method: :delete, class: 'btn btn-danger'}
    %br
    = link_to "戻る", :back
